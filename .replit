modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Smart Light Controller"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "smart_light_controller"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Light Controller"

[[workflows.workflow]]
name = "Smart Light Controller"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install PySide6 requests && python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "smart_light_controller"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "QT_QPA_PLATFORM=offscreen python main.py"

[[workflows.workflow]]
name = "Smart Light Controller Dev"
author = 31197304
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "QT_QPA_PLATFORM=offscreen python main.py"

[[workflows.workflow]]
name = "Web Light Controller"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_app.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "QT_QPA_PLATFORM=offscreen python main.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
